<ul class="media-list">
  <% microtasks.each do |microtask| %>
    <% user = microtask.user %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(current_user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to user.name, user_path(user) %> <span class="text-muted">posted at <%= microtask.created_at %></span>
        </div>
        <div>
          <p><%= microtask.content %></p>
        </div>
   
        <div>
          <% if current_user == microtask.user %>
            <%= link_to "Delete", microtask, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
          
          <!--#===add_start===-->
          
          <%= render 'favorites/favorite_button', user: @user,microtask: microtask %>
          
          <!--#===add_end===-->
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microtasks %>
</ul>